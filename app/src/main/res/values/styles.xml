<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#1FC9DF</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#DDCE45</item>
    </style>
    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">#0D319F</item>
        <item name="colorAccent">#A52A03</item>
        <item name="backgroundColor">#1FC9DF</item>
    </style>
    <style name="MyStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:layout_marginStart">@dimen/margine_small</item>
